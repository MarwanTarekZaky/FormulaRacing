@using Infrastructure.DTO
@{
    Layout = "_mainLayout";
    var homeContent = ViewBag.homeContent as HomePageContentDTO;
}

<!-- Banner -->
<section id="banner">
    <div class="inner">
        <h1>Formula  Racing</h1>
        <p>Unleash the Speed. Ignite the Passion.<br>
            @ViewBag.homeContent.BannerText </p>
    </div>
    <video autoplay loop muted playsinline src="@($"https://localhost:7027/admin-content/{@ViewBag.homeContent.VideoPath}")"></video>
</section>
<!-- Highlights -->
<section class="wrapper">
    <div class="inner">
        <header class="special">
            <h2>Discover Our Thrilling Fleet</h2>
            <p>@ViewBag.homeDescriptionContent.RacesDescription</p>
        </header>
       
        <partial name="_racesCard" />
        <!-- HTML -->
        <a asp-controller="Race" asp-action="Index" class="sport-button">
            <span class="button-text">View All Races</span>
            <span class="button-icon">🏁</span>
            <span class="button-pulse"></span>
        </a>
    </div>
</section>
<!-- CTA -->
<section id="cta" class="wrapper">
    <div class="inner">
        <p>Step into the electrifying world of Formula racing,
            where cutting-edge engineering meets raw adrenaline.
            From heart-pounding turns to lightning-fast straights,
            our global championship events unite the best drivers on Earth in a breathtaking battle for glory. 
            Every race is a story of speed, strategy, and skill — played out before roaring crowds and under the eyes of millions. 
            Join us as we chase greatness, lap after lap, in the ultimate celebration of motorsport excellence.</p>
    </div>
</section>
<!-- Testimonials -->
<section class="wrapper">
    <div class="inner">
        <header class="special">
            <h2>Feel the Roar of the Track</h2>
            <p>@ViewBag.homeDescriptionContent.TracksDescription</p>
        </header>
        <div class="testimonials">
         
        </div>

    </div>
</section>
<partial name="_eventsCard"/>
<a asp-controller="Event" asp-action="Index" class="sport-button-events">
    <span class="button-text">Explore All Events</span>
    <span class="button-icon">🔥</span>
    <span class="button-glow"></span>
    <span class="button-sparkle">✨</span>
</a>

<!-- Include Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">