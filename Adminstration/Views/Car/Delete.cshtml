@model CarDTO

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<div class="alert alert-danger">
    Are you sure you want to delete this car?
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.BrandName</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Max Speed</dt>
        <dd class="col-sm-10">@Model.MaxSpeed</dd>

        <dt class="col-sm-2">Cost</dt>
        <dd class="col-sm-10">@Model.Cost</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" width="100" />
            }else
            {
                <img src="~/media/altcar.jpeg" alt="Car Image" width="100" />
            }
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
