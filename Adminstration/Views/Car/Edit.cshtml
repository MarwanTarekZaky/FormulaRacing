@model CarDTO

@{
    ViewData["Title"] = "Edit Car";
}

<h1>Edit Car</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="BrandId"></label>
        <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-control">
            <option value="" >-- Select Brand --</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxSpeed"></label>
        <input asp-for="MaxSpeed" class="form-control" />
        <span asp-validation-for="MaxSpeed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label asp-for="Visibility" class="form-check-label"></label>
        <input asp-for="Visibility" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Visibility" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {<label>Current Image</label><br />
            <img src="@Model.ImageUrl" width="100" />
        }
        else
        {<label>Image not available </label><br />
            <img src="~/media/altcar.jpeg" alt="Car Image" width="100" />
        }
    </div>
    <button type="submit" class="btn btn-primary mt-2">Save</button>
    <a asp-action="Index" class="btn btn-danger mt-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
