@model Infrastructure.DTO.EventDTO
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Are you sure you want to delete this event?</h2>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@Model.Location</dd>

    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

    <dt class="col-sm-2">ShowOnHomepage</dt>
    <dd class="col-sm-10">@Model.ShowOnHomepage</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
