@model Infrastructure.DTO.BannerDTO

@{
    ViewData["Title"] = "Delete Banner";
}

<h2>Delete Banner</h2>

<h4>Are you sure you want to delete this banner?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Image</dt>
    <dd class="col-sm-10">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="img-thumbnail" style="max-height: 200px;" />
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
