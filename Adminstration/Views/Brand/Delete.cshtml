@model Infrastructure.DTO.BrandDTO

@{
    ViewData["Title"] = "Delete Brand";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this brand?</h4>
<hr />

<form asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</form>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Brand")" class="btn btn-secondary">Cancel</a>
</form>
