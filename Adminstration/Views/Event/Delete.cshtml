@model Infrastructure.DTO.EventDTO
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Are you sure you want to delete this event?</h2>

<form asp-action="DeleteConfirmed" enctype="multipart/form-data" method="get">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" disabled class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Location"></label>
        <input asp-for="Location" disabled class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" type="date" disabled class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="VideoUrl" class="control-label"></label>
        <input asp-for="VideoUrl" disabled class="form-control" />
        <span asp-validation-for="VideoUrl" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label asp-for="ShowOnHomepage" class="form-check-label"></label>
        <input asp-for="ShowOnHomepage" disabled type="checkbox" class="form-check-input" />
        <span asp-validation-for="ShowOnHomepage" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label asp-for="Visibility" class="form-check-label"></label>
        <input asp-for="Visibility"  disabled type="checkbox" class="form-check-input" />
        <span asp-validation-for="Visibility" class="text-danger"></span>
    </div>
</form>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
