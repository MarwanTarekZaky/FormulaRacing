@model List<Infrastructure.DTO.BannerDTO> 

<div id="imageSlider" class="carousel slide" data-ride="carousel" data-interval="3000" data-pause="hover">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <li data-target="#imageSlider" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <!-- Slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img src="@Url.Content(Model[i].ImageUrl)" class="d-block w-100" alt="">
                @if (!string.IsNullOrEmpty(Model[i].Title))
                {
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@Model[i].Title</h5>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Controls -->
    <a class="carousel-control-prev" href="#imageSlider" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#imageSlider" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>