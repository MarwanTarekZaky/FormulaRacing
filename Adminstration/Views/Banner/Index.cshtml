@model IEnumerable<Infrastructure.DTO.BannerDTO>

<h2>Banner List</h2>
<a asp-action="Create" class="btn btn-primary">Add New Banner</a>

<table class="table mt-3">
    <thead>
    <tr>
        <th>Title</th>
        <th>Image</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var banner in Model)
    {
        <tr>
            <td>@banner.Title</td>
            <td><img src="@banner.ImageUrl" width="150" /></td>
            <td>
                <a asp-action="Edit" asp-route-id="@banner.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@banner.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
