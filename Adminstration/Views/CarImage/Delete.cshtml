@model Domain.Models.CarImage

@{
    ViewData["Title"] = "Delete Car Image";
    var carId = ViewBag.carId;
}

<h1>Delete Car Image</h1>

<div class="alert alert-danger">
    Are you sure you want to delete this car image?
</div>

<form asp-action="DeleteConfirmed" asp-route-carId="@carId" method="post">
    <input type="hidden" asp-for="Id" />
    
    <div class="form-group">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <td>
                <div style="width: 200px; height: 150px; overflow: hidden;">
                    <img src="@Model.ImageUrl"
                         style="width: 100%; height: 100%; object-fit: cover;"
                         class="img-fluid"
                         alt="Car Image not available" />
                </div>
            </td>
        }
    </div>
    
    <div class="form-group number">
        <label asp-for="DisplayOrder" class="control-label"></label>
        <input asp-for="DisplayOrder" disabled type="number" class="form-range"/>
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
    </div>
    
    <div class="form-group form-check">
        <label asp-for="Hidden" class="form-check-label"></label>
        <input asp-for="Hidden" disabled type="checkbox" class="form-check-input"/>
        <span asp-validation-for="Hidden" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-danger" >Delete</button>
    <a asp-action="Index" asp-route-carId="@Model.CarId" class="btn btn-secondary">Cancel</a>
</form>

<div>
    <dl class="row">
        <dt class="col-sm-2">Hidden Visibility</dt>
        <dd class="col-sm-10">@Model.Hidden</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            
        </dd>
    </dl>
</div>


 
