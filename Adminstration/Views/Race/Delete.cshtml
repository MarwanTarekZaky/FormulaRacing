@model Infrastructure.DTO.RaceDTO

@{
    ViewData["Title"] = "Delete Race";
}

<h1>@ViewData["Title"]</h1>

<h4>Are you sure you want to delete this race?</h4>
<hr />

<dl class="dl-horizontal">
    <dt>Name</dt>
    <dd>@Model.Name</dd>

    <dt>Length</dt>
    <dd>@Model.Length</dd>

    <dt>Date</dt>
    <dd>@Model.Date.ToString("MM/dd/yyyy")</dd>

    <dt>Location</dt>
    <dd>@Model.Location</dd>

    <dt>Occupancy</dt>
    <dd>@Model.Occupancy</dd>
    
    <dt>Show on HomePage</dt>
    @if (Model.ShowOnHomepage)
    {
        <dd>True</dd>
    }
    else
    {
        <dd>Hidden</dd>
    }
   
    
    <dt>Image</dt>
    <dd>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Race Image" class="img-thumbnail" />
        }
        else
        {
            <p>No image available</p>
        }
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Race")" class="btn btn-secondary">Cancel</a>
</form>
