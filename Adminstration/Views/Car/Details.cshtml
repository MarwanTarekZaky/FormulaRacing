@model CarDTO

@{
    ViewData["Title"] = "Car Details";
}

<h1>Car Details</h1>

<form asp-action="Details" method="get">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="BrandId" ></label>
        <select asp-for="BrandId" disabled asp-items="ViewBag.Brands" class="form-control">
            <option value="" >-- Select Brand --</option>
        </select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" disabled class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" disabled class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaxSpeed"></label>
        <input asp-for="MaxSpeed"  disabled class="form-control" />
        <span asp-validation-for="MaxSpeed" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input asp-for="Cost" disabled class="form-control" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <label asp-for="Visibility" class="form-check-label"></label>
        <input asp-for="Visibility" disabled type="checkbox" class="form-check-input" />
        <span asp-validation-for="Visibility" class="text-danger"></span>
    </div>

    <div class="form-group">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {<label>Current Image</label><br />
            <img src="@Model.ImageUrl"  height="100px" width="200px" />
        }
    </div>
</form>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
